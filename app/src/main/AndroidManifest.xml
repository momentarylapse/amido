<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.michi.amido">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName=".DrawActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LearnActivity"
            android:label="@string/title_activity_learn"
            android:parentActivityName=".DrawActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".LearnRangeSelectionActivity"
            android:label="@string/title_activity_learn_range_selection"
            android:parentActivityName=".LearnActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michi.amido.LearnActivity" />
        </activity>
        <activity
            android:name=".LearnDrawActivity"
            android:label="@string/title_activity_learn_draw"
            android:parentActivityName=".LearnActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michi.amido.LearnActivity" />
        </activity>
        <activity
            android:name=".LearnDoneActivity"
            android:label="@string/title_activity_learn_done"
            android:parentActivityName=".LearnActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.michi.amido.DrawActivity" />
        </activity>
        <activity
            android:name=".LearnShowActivity"
            android:label="@string/title_activity_learn_show"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
